.row.testimonials
    each testimonial in testimonials
      .col-sm-12.col-md-6.col-lg-6.mb-4
        .card
          .card-header.p-2
            i.fas.fa-map-marker-alt
              strong
                |   #{testimonial.trip.toUpperCase()} 
          .card-body.p-2
            p.mb-0.card-text
              i.fas.fa-quote-left
              | #{testimonial.message}
            footer.blockquote-footer
              | #{testimonial.name}